<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State body normal -->
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270"
                 android:endColor="#DFDDC3"
                 android:startColor="#BFBDA7" />
            
            <stroke android:width="1dp"
                 android:color="@color/white" />

            <corners android:radius="20dp" />
            
            <!-- <solid android:color="@color/material_orange_500"/> -->

            <padding android:bottom="5dp"
                 android:left="5dp"
                 android:right="5dp"
                 android:top="5dp" />
        </shape>
    </item>

    
    <!-- State of body when hold body -->
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270"
                 android:startColor="#BFBEB3"
                 android:endColor="#9F9B6D"
                  />

            <stroke android:width="1dp"
                 android:color="@color/white" />

            <corners android:radius="20dp" />
            
            <!-- <solid android:color="@color/material_orange_700"/> -->

            <padding android:bottom="5dp"
                 android:left="5dp"
                 android:right="5dp"
                 android:top="5dp" />
        </shape>
        
    </item>

</selector>